{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "reflect-metadata",
            "jest"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": false,
        "lib": [ "es2020", "dom" ],
        "useUnknownInCatchVariables": false,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__test__/*"
    ]
}
